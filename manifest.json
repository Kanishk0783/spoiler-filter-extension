{
  "manifest_version": 3,
  "name": "Spoiler & Hate Speech Filter",
  "version": "1.0",
  "description": "Hides spoilers, hate speech, and inappropriate content from webpages.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}